
<h3>Welcome <%= current_user.first_name %></h3>
<div style="position:fixed;top:50px;bottom:50px;width:30%;">
<div class="well" style="max-width: 340px;height:500px; padding: 8px 0;">
    <ul class="nav nav-list">
      
      <li class="nav-header">Shopkeeper Action</li>

      <li class="active"><%=link_to "Edit profile" ,edit_user_path(current_user)%></li>

      <li><%=link_to "create shop " ,new_shop_path %></li>
      <ul class="nav nav-list">
      
        <li class="nav-header">shops</li>
        <% if current_user.shops.present? %>
          <% current_user.shops.each do |s|%>
            <li><%=link_to s.name ,shop_path(s.id) %></li>
          <% end%>
        
        <% end %>
      </ul>
      <ul class="nav nav-list">
        <li class="divider"></li>
      </ul>
      
      <li>Help</li>
    </ul>
  </div>
</div>    



