

<h3>Edit user information</h3>


<div style="background-color:gray;width:50%;height:74%;position:absolute;left:25%;border:5px solid black;">
  <%= form_for @user, url:user_path(current_user.id), method: :put, multipart: true, :class => "form-horizontal" do |f| %>
    
    
    <div class="form-group">
      <label class="col-sm-2 control-label">Firstname</label>
      <div class="col-sm-10">
        <%= f.text_field :first_name, :autofocus => true, :placeholder =>"First Name",:class => "text-field-height" %>
      </div>
    </div>
    
    <div class="form-group">
     <label class="col-sm-2 control-label">Lastname</label>   
      <div class="col-sm-10">
        <%= f.text_field :last_name, :placeholder => "Lirst Name",:class => "text-field-height" %>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-sm-2 control-label">Date of birth</label>
      <div class="col-sm-10">
        <%= f.text_field :date_of_birth, :type => "date", :placeholder =>"30/05/1989",:class => "text-field-height"%>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-sm-2 control-label">Gender</label>
      <div class="col-sm-10">
        <%= f.select(:gender, options_for_select([['Male', 1], ['Female', 2]], 1))%>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-sm-2 control-label">Contact no.</label>
      <div class="col-sm-10">
        <%= f.text_field :phone_no, :type => "tel",:class => "text-field-height" %>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-sm-2 control-label">Picture </label>
      <div class="col-sm-10">
        <%= f.fields_for :pictures do |p|%>
          <%= p.file_field :image %>
        <% end %>
       
      </div>
    </div> 
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Edit", :class => "btn btn-primary" %>
      </div>
    </div>
      
  <% end %>
</div>

<div style="position:fixed;top:45px;right:20px;">
  <%=link_to "Back" ,users_path %>
</div>


