<%= stylesheet_link_tag "custom" %>

<h3>Welcome <% current_user.first_name %></h3>
<div class="well" style="max-width: 340px;height:500px; padding: 8px 0;">
  <ul class="nav nav-list">
    <li class="nav-header">User Action</li>
    <li class="active">
      <%=link_to "Edit profile" ,edit_user_path(current_user), :method => "get" %>
    </li>  
    <li>
      <%=link_to "choose category for email" ,choosecategories_categories_path, :method => "get" %>
    </li>
    <li>
      <%=link_to "place order" ,show_cart_product_orders_path, :method => "get" %>
    </li>
</div>


<div style="position:absolute;top:60px;left:45%;">
  
  <%= form_for :search, url: showproduct_users_path, method: :get, :class => "form-search" do |f| %>
    <%= f.text_field :search, :autofocus => true, :placeholder =>"Search by category or name", :class=>"input-medium search-query text-field-height"%>
    <%= f.submit "Search", :class => "btn" %>
  <% end %>
    
  
  <div id="catdata"> 
  
  </div>
</div>

<script type="text/javascript">
 $('#cat').change(function() {
  var cid = $(this).val();
  $.get( "/users/showproduct",{ id: cid }, function( data ) {
    $('#catdata').html(data);
  });
});
 </script>
