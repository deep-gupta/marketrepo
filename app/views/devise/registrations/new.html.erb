<center>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password %></div><br />

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br />

  <div><%= f.label :user_type %>
  	<%= f.select(:user_type, options_for_select([['Visitors', 1], ['Shopkeepers', 2]], 1))%>
  </div><br />

  <div><%= f.submit "Sign up" %></div><br />
<% end %>

<%= render "devise/shared/links" %>
</center>