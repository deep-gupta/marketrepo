
<div style="background-color:rgb(245,245,245);width:50%;height:74%;position:absolute;left:25%;top:10%;border:5px solid black;">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
      <div class="form-group"> 
          <label class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <%= f.email_field :email, :autofocus => true,:class => "text-field-height" %>
          </div>
      </div>

      <div class="form-group"> 
          <label class="col-sm-2 control-label">Password</label>
          <div class="col-sm-10">
            <%= f.password_field :password,:class => "text-field-height" %>
          </div>
      </div>

      <div class="form-group"> 
          <label class="col-sm-2 control-label">psssword</label>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation,:class => "text-field-height" %>
          </div>
      </div>

      <div class="form-group"> 
          <label class="col-sm-2 control-label">Usertype</label>
          <div class="col-sm-10">
            <%= f.select(:user_type, options_for_select([['Visitors', 1], ['Shopkeepers', 2]], 1))%>
          </div>
      </div>

  
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sign up", :class => "btn btn-primary" %>
        </div>
      </div>
<% end %>

<div style="text-color:white">
  <%= render "devise/shared/links" %>
</div>
</div>
