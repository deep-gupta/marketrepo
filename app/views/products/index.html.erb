<%= render "/shops/shop" %>

<div style="text-align:center;">
  <h3></h3>

  <% if @products.present? %>

    <div>
      <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
    </div>    
   
    <div style="display:inline-block;margin:auto;width:auto;max-width:69%;background-color:grey;position:relative;left:165px;top:5px;border:5px solid black;">
      <ul>
        <% @products.each do |p| %>
          <li class="thumbnail" style="float:left;display:inline-block;padding:5px;height:200px;width:275px;margin:5px;">
              
              <div style="position:relative;width:50%;left:0px;top:0px;float:left">
                <img width='194' height='166' src="<%= p.pictures.first.image %>">
                <% if user_signed_in? && current_user.user_type == "1" %>
                <%= link_to "Add to cart", addtocart_cart_path(p.id), :method => "get",:remote => true%>
                <% end %>
              </div>
              <div style="float:right;width:45%;text-align:left;word-wrap:break-word;">
                Name:<%= p.name %><br/>Price:<%= p.price %><br/>Info:<%= p.description %>
              </div>
          </li>
        <% end %>
      </ul>
    </div> 
     
  <div style="margin:35px auto 0;width:22%;">
    <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
  </div>

  <% else %>
    <h3> No product added to the shop till now</h3>
  <% end %><br/><br/>
</div>



<div class="search">
  <%= form_for :search, url: search_result_shops_path, method: :get, :class => "form-search" do |f| %>
    
    <div>
      <%= hidden_field_tag "shop_id", params[:shop_id] %>    
    </div>
    <%= f.text_field :search, :autofocus => true, :placeholder =>"By Name", :class=>"input-medium search-query"%>
    <%= f.submit "Search", :class => "btn" %>
  <% end %>
</div>


 
