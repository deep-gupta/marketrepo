<%= render "/users/shopkeeper"%>

<div class="rightbox">
  <%= form_for @shop, url: shop_path(@shop), method: :put, :class => "form-horizontal" do |f| %>
       
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Country<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("country", "country_id", Country.all.collect {|p| [ p.name, p.id ] },
        { :prompt => @shop.mall.city.state.country.name }, {:id => 'cous',:'data-url' => show_state_malls_path})  %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">State<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("state", "state_id",{},{:prompt => @shop.mall.city.state.name}, {:id => 'stas',:'data-url' => show_city_malls_path}) %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">City<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("city", "city_id",{},{:prompt => @shop.mall.city.name},  {:id => 'cits',:'data-url' => show_mall_shops_path}) %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Mall name<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("mall", "mall_id",{},{:prompt => @shop.mall.name},  {:id => 'mals'}) %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Shop name<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= f.text_field :name, :autofocus => true, :value => @shop.name, :class => "text-field-height",:id => 'names' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Edit", :class => "btn btn-primary",:onclick => "return validateFormShop();" %>
      </div>
    </div>
  <% end %>
  <div class="warning" id="show_msg"></div>
</div>

