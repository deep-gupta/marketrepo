<div class="t_center">
  <h3>Search Result </h3>
</div>

<div class="d_w_a">
  
  <% if @products.present? %>
  <div class="t_center">
    <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
  </div>
    <div class="s_r_m">  
      <div class="s_r">
        <ul>
          <% @products.each do |p| %>
            
            <li class="thumbnail s_r_thumbnail" >
                
                <div class="s_r_thumbnail_left">
                  <img width='194' height='166' src="<%= p.pictures.first.image %>">
                  <% if user_signed_in? && current_user.user_type == "1" %>
                    <%= link_to "Add to cart", addtocart_cart_path(p.id), :method => "get",:remote => true%>
                  <% end %>
                </div>
                <div class="s_r_thumbnail_right">
                  Name:<%= p.name %><br/>
                  Price:<%= p.price %><br/>
                  Info:<%= p.description %>
                </div>
            </li>
          
          <% end %>
        </ul>
      </div>  
      <div class="p_t_t">
        <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
      </div>
    </div>  
  
  <% else %>
    <%= flash[:notice] = "No record found" %>
  <% end%>  
</div>
<% if user_signed_in?%>

  <div class="back">
    <% if current_user.user_type == "2"%>
      <%=link_to "Back" ,shop_products_path(params[:shop_id]) %>
    <% end %>

    <% if current_user.user_type == 'admin'%>
      <%=link_to "Back" ,categories_path %>
    <% end %>
  </div>

<% else %>
  <div class="back">
    <%=link_to "Back" ,users_path %>
  </div>
  <div class="signout t_90">
    <%= link_to "Sign in", users_path %>
  </div>
<% end %>


<div class="search">
  <%= form_for :search, url: search_result_shops_path, method: :get, :class => "form-search" do |f| %>
    
    <div>
      <%= hidden_field_tag "shop_id", params[:shop_id] %>    
    </div>
    <%= f.text_field :search, :autofocus => true, :placeholder =>"By Name", :class=>"input-medium search-query"%>
    <%= f.submit "Search", :class => "btn" %>
  <% end %>
</div

<div class="footer">
</div>
