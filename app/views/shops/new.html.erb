<%= render "/users/shopkeeper"%>
<div class="rightbox">
  <%= form_for :shop, url: shops_path, method: :post, :class => "form-horizontal" do |f| %>
    <% if @shop.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @shop.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>  
        
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Country<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("country", "country_id", Country.all.collect {|p| [ p.name, p.id ] },
        { :prompt => 'Select' }, {:id => 'cous'})  %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">State<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("state", "state_id",{},{:prompt => 'Select'}, {:id => 'stas'}) %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">City<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("city", "city_id",{},{:prompt => 'Select'},  {:id => 'cits'}) %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Mall name<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("mall", "mall_id",{},{:prompt => 'Select'},  {:id => 'mals'}) %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Shop name<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= f.text_field :name, :autofocus => true, :placeholder => "shop name",:class => "text-field-height",:id => 'names' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Submit", :class => "btn btn-primary",:onclick => "return validateFormShop();" %>
      </div>
    </div>
  <% end %>
  <div class="warning" id="show_msg"></div>
</div>
