
<h3>Create shop  </h3>
<div style="background-color:gray;width:50%;height:74%;position:absolute;left:25%;border:5px solid black;">
  <%= form_for :shop, url: shops_path, method: :post, :class => "form-horizontal" do |f| %>

    
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Country</label>
      <div class="col-sm-10">
        <%= select("country", "country_id", Country.all.collect {|p| [ p.name, p.id ] },
        { :include_blank => true, :prompt => 'Select' }, {:id => 'cou'})  %>
      </div>
    </div>
      
    

    <div class="form-group"> 
      <label class="col-sm-2 control-label">State</label>
      <div class="col-sm-10">
        <%= select("state", "state_id",{},{ :include_blank => true , :prompt => 'Select'}, {:id => 'sta'}) %>
      </div>
    </div>
  
    <div class="form-group"> 
      <label class="col-sm-2 control-label">City</label>
      <div class="col-sm-10">
        <%= select("city", "city_id",{},{ :include_blank => true ,:prompt => 'Select'},  {:id => 'cit'}) %>
      </div>
    </div>

    <div class="form-group"> 
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <%= select("mall", "mall_id",{},{ :include_blank => true ,:prompt => 'Select'},  {:id => 'mal'}) %>
      </div>
    </div>


    <div class="form-group"> 
      <label class="col-sm-2 control-label">Shop name</label>
      <div class="col-sm-10">
        <%= f.text_field :name, :autofocus => true, :placeholder => "shop name",:class => "text-field-height" %>
      </div>
    </div>

    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Submit", :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>

<script type="text/javascript">
 $('#cou').change(function() {
  var cid = $(this).val();
  $.get( "/malls/showstate",{ id: cid}, function( data ) {
    $('#sta').html(data);
  });
});

 $('#sta').change(function() {
  var sid = $(this).val();
  $.get( "/malls/showcity",{ id: sid}, function( data ) {
    $('#cit').html(data);
  });
});


 $('#cit').change(function() {
  var cid = $(this).val();
  $.get( "/shops/showmall",{ id: cid}, function( data ) {
    $('#mal').html(data);
  });
});
  

</script>

<div style="position:absolute;top:45px;right:20px;">
  <%=link_to "Back" ,users_path %>
</div>
