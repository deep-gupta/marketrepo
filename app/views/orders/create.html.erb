
<div style="text-align:center">
  <h3>Enter Card Detail</h3>
  <div style="background-color:gray;width:60%;height:74%;position:absolute;left:25%;border:5px solid black;">
    <%=form_tag('/orders/place_order', :method => :get, :class => "form-horizontal") do %>
      <%#= hidden_field_tag 'name', params[:order][:name] %>
      <%#= hidden_field_tag 'name', params[:order][:delivery] %>
      <%#= hidden_field_tag 'name', params[:order][:contact] %>
        
      <div class="form-group">
        <label class="col-sm-2 control-label">card number</label>
        <div class="col-sm-10">
          <%= text_field_tag 'number', nil,:autofocus => true, :placeholder =>"card number", :class => "text-field-height", :style=>"position: relative; right: 118px;" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">card holder</label>
        <div class="col-sm-10">
          <%= text_field_tag 'name', nil, :placeholder =>"card holder name", :class => "text-field-height", :style=>"position: relative; right: 118px;" %>
        </div>
      </div>
      
      
      <div class="form-group">
        <label class="col-sm-2 control-label">CVV</label>
        <div class="col-sm-10">
          <%= text_field_tag 'cvv', nil, :placeholder =>"CVV", :class => "text-field-height", :style=>"position: relative; right: 118px;" %>
        </div>
      </div>



      <div class="form-group">
        <label class="col-sm-2 control-label">Expiery</label>
        <div class="col-sm-10">
          <%= text_field_tag 'expiery', nil, :placeholder => "expiery month",:type => "month", :class => "text-field-height", :style=>"position: relative; right: 118px;" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= submit_tag "Proceed", :class => "btn btn-primary",:style=>"position: relative; right: 86px;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>



<%= link_to "Back" ,users_path %>
