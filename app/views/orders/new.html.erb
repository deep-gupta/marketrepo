<div class="t_center">
<h3>Enter users info</h3>
  <div class="order_new">
    <%= form_for :order, url: orders_path, method: :post,:class => "form-horizontal" do |f| %>

      
      <%#= f.hidden_field :shop_id, :value => params[:shop_id] %>

      <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <%= f.text_field :name, :autofocus => true, :placeholder =>"Enter Name", :class => "text-field-height p_r" %>
        </div>
      </div>


      <div class="form-group">
        <label class="col-sm-2 control-label">Address</label>
        <div class="col-sm-10">
          <%= f.text_area :delivery, :size => "5x5", :class => "p_r_w" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">contact</label>
        <div class="col-sm-10">
          <%= f.text_field :contact, :placeholder => "Mobile no.", :class => "text-field-height p_r" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit "Proceed to payment", :class => "btn btn-primary p_r_86" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="back">
  <%=link_to "Back" ,show_cart_product_orders_path %>
</div>
