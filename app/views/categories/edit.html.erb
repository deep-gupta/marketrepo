<%= render "users/admin" %>
<div class="rightbox_mall">
  <div>
      <%= form_for @category, url:category_path(@category.id), method: :put, :class => "form-horizontal" do |f| %>
        <div class="form-group"> 
          <label class="col-sm-2 control-label">Name<span class="astrik">*</span></label>
          <div class="col-sm-10">
            <%= f.text_field :name, :autofocus => true, :value => @category.name,:placeholder => "Category Name",:class => "text-field-height",:id => "name" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Edit", :class => "btn btn-primary", :onclick => "return validateFormCategory();" %>
          </div>
        </div>
      <% end %>
  </div>    
</div>
