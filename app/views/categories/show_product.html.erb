
<%= render "/users/admin"%>
<div style="text-align:center;">
<% if @products.present? %>
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
    <div style="display:inline-block;margin-left:20px;width:70%;background-color:grey;border:5px solid black;">
      <ul>
        <% @products.each do |p| %>
          <li class="thumbnail" style="float:left;display:inline-block;padding:5px;height:200px;width:275px;margin:5px;">
              
              <div style="position:relative;width:50%;left:0px;top:0px;float:left">
                <img width='194' height='166' src="<%= p.pictures.first.image %>"><%#= link_to "Add to cart", addtocart_cart_path(p.id), :method => "get",:remote => true%>
              </div>
              <div style="float:right;width:45%;text-align:left;word-wrap:break-word;">
                Name:<%= p.name %><br/>Price:<%= p.price %><br/>Info:<%= p.description %>
              </div>
          </li>
        <% end %>
      </ul>
    </div>  
  <div style="margin-left:300px;">
    <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
  </div>
<% else %>
  <h3>No product</h3>
<% end %>
<br /><br />



<div class="search">
  <%= form_for :search, url: search_result_shops_path, method: :get, :class => "form-search" do |f| %>
    <div>
      <%= hidden_field_tag "shop_id", params[:shop_id] %>    
    </div>
    <%= f.text_field :search, :autofocus => true, :placeholder =>"By Name", :class=>"input-medium search-query"%>
    <%= f.submit "Search", :class => "btn" %>
  <% end %>
</div>




<div class="signout">
<%= link_to "Sign Out", users_path%>
</div>
