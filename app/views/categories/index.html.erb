
<%= render "users/admin" %>
<div class="rightbox">
  <div>
      <%= form_for :category, :class => "form-horizontal" do |f| %>
        <div class="form-group"> 
          <label class="col-sm-2 control-label">Name<span style="color:red">*</span></label>
          <div class="col-sm-10">
            <%= f.text_field :name, :autofocus => true, :placeholder => "Category Name",:class => "text-field-height",:id => "name" %>
          </div>
        </div>
  
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Submit", :class => "btn btn-primary", :onclick => "return validateForm();" %>
              <%= f.button "Cancle", :class => "btn btn-primary" %>
          </div>
        </div>
      <% end %>
  </div>    
</div>

<script>
  function validateForm()
  {
    var x = $("#name").val();
    if(x=="")
    {
    alert("category can't be empty");
    return false;
    }
  }
</script>




