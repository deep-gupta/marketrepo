<%= render "users/admin" %>
<div class="rightbox_mall">
  <div>
      <%= form_for :category, url:categories_path, method: :post, :class => "form-horizontal" do |f| %>
      <% if @category.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @category.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        <div class="form-group"> 
          <label class="col-sm-2 control-label">Name<span class="astrik">*</span></label>
          <div class="col-sm-10">
            <%= f.text_field :name, :autofocus => true, :placeholder => "Category Name",:class => "text-field-height",:id => "name" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Submit", :class => "btn btn-primary", :onclick => "return validateFormcategory();" %>
          </div>
        </div>
      <% end %>
  </div>    
</div>



