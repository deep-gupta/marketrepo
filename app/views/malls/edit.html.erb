<%= render "/users/admin"%>

<div class="rightbox">
  <%= form_for @mall, url:mall_path(@mall.id), method: :put, multipart: true, :class => "form-horizontal" do |f| %>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Country<span class="astrik">*</span></label>
      <div class="col-sm-10">
          <%= select("country", "country_id", Country.all.collect {|p| [ p.name, p.id ] },{:prompt => @mall.city.state.country.name }, {:id => 'cou',:'data-url' => show_state_malls_path}) %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">State<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("state", "state_id",{},{ :prompt => @mall.city.state.name}, {:id => 'sta',:'data-url' => show_city_malls_path}) %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">City<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= select("city", "city_id",{},{:prompt => @mall.city.name},  {:id => 'cit'}) %>
      </div>
    </div>  
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Name<span class="astrik">*</span></label>
      <div class="col-sm-10">
        <%= f.text_field :name, :autofocus => true, :value => @mall.name,:class => "text-field-height",:id => "name" %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Address</label>
      <div class="col-sm-10">
        <%= f.text_field :address, :value => @mall.address, :class => "text-field-height" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Edit", :class => "btn btn-primary", :onclick => "return validateFormMall();" %>
      </div>
    </div>
  <% end %>
    <div class="warning" id="show_msg"></div>  
</div>    
