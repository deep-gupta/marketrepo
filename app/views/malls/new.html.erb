<div style="mergin:50px">
<h3>create new mall</h3>
  
    <div style="background-color:gray;width:50%;height:74%;position:absolute;left:25%;border:5px solid black;">
      <%= form_for :mall, url:malls_path, method: :post, :class => "form-horizontal" do |f| %>

        <div class="form-group"> 
          <label class="col-sm-2 control-label">Country</label>
          <div class="col-sm-10">
            <%= select("country", "country_id", Country.all.collect {|p| [ p.name, p.id ] },{ :include_blank => true, :prompt => 'Select' }, {:id => 'cou'}) %>
          </div>
        </div>

        <div class="form-group"> 
          <label class="col-sm-2 control-label">State</label>
          <div class="col-sm-10">
            <%= select("state", "state_id",{},{ :include_blank => true , :prompt => 'Select'}, {:id => 'sta'}) %>
          </div>
        </div>

        <div class="form-group"> 
          <label class="col-sm-2 control-label">City</label>
          <div class="col-sm-10">
            <%= select("city", "city_id",{},{ :include_blank => true ,:prompt => 'Select'},  {:id => 'cit'}) %>
          </div>
        </div>
        
        <div class="form-group"> 
          <label class="col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            <%= f.text_field :name, :autofocus => true, :placeholder => "Mall Name" %>
          </div>
        </div>

        <div class="form-group"> 
          <label class="col-sm-2 control-label">Address</label>
          <div class="col-sm-10">
            <%= f.text_field :address, :placeholder => "Mall Address" %>
          </div>
        </div>

      
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Submit", :class => "btn btn-primary" %>
          </div>
        <div>
      <% end %>
    </div>    
</div>
</div>


<script type="text/javascript">
 $('#cou').change(function() {
  var cid = $(this).val();
  $.get( "/malls/showstate",{ id: cid}, function( data ) {
    $('#sta').html(data);
  });
});

 $('#sta').change(function() {
  var sid = $(this).val();
  $.get( "/malls/showcity",{ id: sid}, function( data ) {
    $('#cit').html(data);
  });
});
  

</script>

<div style="position:absolute;top:45px;right:20px;">
<%=link_to "Back" , users_path %>
</div>
